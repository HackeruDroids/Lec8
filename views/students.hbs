<div class="container">

    <h1>{{title}} Page</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each students}}
            <tr>
                <td>{{id}}</td>
                <td>{{firstname}}</td>
                <td>{{lastname}}</td>
                <td>{{email}}</td>
                <td>
                    <a href="/updateStudent?id={{id}}">Update</a> | 
                    <a onclick="if(!confirm('Are you sure?')) return false;" href="/deleteStudent?id={{id}}">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>